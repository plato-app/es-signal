{
	"name": "@plato/signal",
	"version": "1.3.0",
	"description": "A signal is a specific event to which observers can subscribe to receive.",
	"keywords": [
		"plato",
		"signal",
		"emitter",
		"event"
	],
	"license": "MIT",
	"author": "Geoff Blair <geoff@platoteam.com>",
	"repository": "github:plato-app/es-signal",
	"main": "dist/cjs/index.js",
	"types": "dist/types/index.d.ts",
	"module": "dist/es/index.js",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsc && tsc -p tsconfig-cjs.json",
		"clean": "rm -rf dist",
		"doc": "rm -rf docs && typedoc lib/index.ts",
		"lint": "eslint --ext .ts --max-warnings 0 lib",
		"prepublish": "yarn lint && yarn clean && yarn build",
		"test": "tape 'tests/**/*.js'"
	},
	"devDependencies": {
		"@plato/eslint-config-ts": "^0.3.3",
		"@typescript-eslint/eslint-plugin": "^4.17.0",
		"@typescript-eslint/parser": "^4.17.0",
		"eslint": "^7.22.0",
		"tape": "^5.0.1",
		"typedoc": "^0.20.32",
		"typescript": "^4.2.3"
	},
	"publishConfig": {
		"access": "public"
	},
	"eslintConfig": {
		"extends": "@plato/eslint-config-ts"
	}
}
